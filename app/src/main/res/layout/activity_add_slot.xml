<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSlot">

    <EditText
        android:id="@+id/slotStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:text="Enter start time in HH:MM format"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="186dp" />

    <EditText
        android:id="@+id/slotEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:text="Enter end time in HH:MM format"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="306dp" />

    <Button
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="509dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Slot"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="53dp" />

    <Spinner
        android:id="@+id/selectMachine"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="97dp" />
</androidx.constraintlayout.widget.ConstraintLayout>